#!/bin/bash
if ping -c 1 8.8.8.8 &>/dev/null; then
    echo "Интернет есть, ставим свежак..."
    archinstall --config /root/desktop.json
else
    echo "Офлайн режим, используем локальный репозиторий..."
    # Команда для archinstall использовать локальный конфиг пакмана
    archinstall --config /root/server.json --repository-config /etc/pacman.conf.offline
fi
